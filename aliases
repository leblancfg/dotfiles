## Dotfiles
# Update dotfiles
dfpush() {
    (
    cd ~/dotfiles
	git add .
	git commit -m 'autoupdate'
	git push origin master
    )
}
dfpull() {
    (
    cd ~/dotfiles
	git pull --ff-only
	./install  2>&1 >/dev/null
    )
}

## Etc
alias shrug="echo '¯\\_(ツ)_/¯' | pbcopy"
notify() {
    INCANTATION="$@"
    COMMAND=$( echo "$INCANTATION" | cut -d " " -f1 )

    "$INCANTATION" && terminal-notifier -title "$COMMAND" -message hey -contentImage "~/src/github.com/ShopifyPeopleAnalytics/siphon/siphon/assets/siphon.png"
}

